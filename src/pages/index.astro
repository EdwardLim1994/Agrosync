---
import BaseLayout from "../layouts/BaseLayout.astro";
import KeyVisual from "../components/home/KeyVisual.astro";
import Introduction from "../components/home/Introduction.astro";
import Strategies from "../components/home/Strategies.astro";
import Problems from "../components/home/Problems.astro";

import Banner from "../components/Banner.astro";
import Container from "../components/Container.astro";
import Testimonial from "../components/home/Testimonial.vue";
import ContactUs from "../components/home/ContactUs.vue";
---

<BaseLayout pageTitle='Agrosync'>
	<section id='key-visual'>
		<KeyVisual />
	</section>
	<Banner id='first-banner' classes='text-white shadow-lg '>
		<h4 class='font-bold text-3xl'>Let's Dive into it</h4>
	</Banner>
	<section id='introduction' class='p-6'>
		<Introduction />
	</section>

	<Banner id='second-banner' classes='text-white shadow-lg'>
		<h4 class='font-bold text-3xl'>What are the Pain Points</h4>
	</Banner>
	<div
		id='problems'
		class='bg-contain'
		style="background-image:url('/blurry-gradient.svg');"
	>
		<Container>
			<Problems />
		</Container>
	</div>
	<Banner id='third-banner' classes='text-white shadow-lg'>
		<h4 class='font-bold text-3xl'>That's why we're here</h4>
	</Banner>
	<div id='strategies'>
		<Container>
			<Strategies />
		</Container>
	</div>
	<Banner id='fourth-banner' classes='text-white shadow-lg'>
		<h4 class='font-bold text-3xl'>How our customers said</h4>
	</Banner>
	<div
		id='testimonial'
		class='bg-gradient-to-r from-slate-700 to-gray-900 h-[45rem]'
	>
		<Container>
			<Testimonial client:visible />
		</Container>
	</div>
	<div id='contact-us' class='relative bg-[#acfcf3]'>
		<div class='contact-us-overflow mx-auto'></div>
		<Container classes='flex flex-col w-full items-center '>
			<ContactUs />
		</Container>
	</div>
</BaseLayout>

<style>
	.contact-us-overflow {
		height: 100px;
		width: 100%;
		background-color: #acfcf3;
		border-radius: 50%;
		position: absolute;
		transform: translateY(-3rem);
	}
</style>

<style is:global>
	#first-banner {
		@apply bg-gradient-to-r from-gray-600 to-gray-800;
	}

	#second-banner {
		@apply bg-gradient-to-r from-gray-600 to-gray-800;
	}

	#third-banner {
		@apply bg-gradient-to-r from-gray-600 to-gray-800;
	}
	#fourth-banner {
		@apply bg-gradient-to-r from-gray-600 to-gray-800;
	}

	#strategies-background {
		@apply bg-gradient-to-r from-indigo-500 from-10% via-sky-500 via-30% to-emerald-500 to-90%;
	}
	#testimonial-background {
		@apply bg-gray-900;
	}
</style>
