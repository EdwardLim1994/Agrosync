---
import Logo from "../Logo.astro";
---

<div
	class="w-full h-[45rem] relative bg-cover bg-center bg-[url('/home/key-visual.gif')]"
>
	<div class='backdrop-blur-md bg-gray-600/40 absolute w-full h-full z-10'>
	</div>
	<div class='h-full grid place-items-center absolute z-20 w-full h-full'>
		<div class='text-white'>
			<div class='mb-8'>
				<Logo classes='w-[15%] mx-auto ' />
			</div>

			<div class='flex w-full justify-center'>
				<h1
					class='text-xl border-4 rounded-full px-5 py-3 mb-8 inline-block font-bold'
				>
					Agrosync
				</h1>
			</div>
			<h1 class='text-center mx-auto leading-loose'>
				<span class='text-3xl font-light'
					>Revolutionizing Agriculture with</span
				>
				<br />
				<span
					class='font-black uppercase text-7xl bg-gradient-to-r from-green-400 to-cyan-400 inline-block bg-clip-text text-transparent dropshadow-lg'
					>Smart, AI-Driven Solutions</span
				>
			</h1>
		</div>
	</div>
</div>
